{
  "compilerOptions": {
    "target": "ESNext",                       
    "module": "ESNext",   
    "moduleResolution": "node",               
    "strict": true,                        
    "esModuleInterop": true,               
    "skipLibCheck": true,                  
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["node","jest"],
  },
  "include": ["src/**/*","tests/**/*"],                  
  "exclude": ["node_modules"],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
